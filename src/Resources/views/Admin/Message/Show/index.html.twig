{% extends '@SyliusAdmin/layout.html.twig' %}

{% block title %}
    {{ 'sylius.ui.message'|trans }} #{{ message.id }} {{ parent() }}
{% endblock %}

{% block content %}
    <div class='ui segment'>
        <table class='ui celled table'>
            <thead class="full-width">
            <tr>
                <th class='ten wide'>{{ 'sms77.response'|trans }}</th>
                <th class='two wide'>{{ 'sms77.customerGroups'|trans }}</th>
                <th class='two wide'>{{ 'sms77.from'|trans }}</th>
                <th class='two wide'>{{ 'sms77.ui.config'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td data-label='{{ 'sms77.response'|trans }}'>
                    {% for response in message.response %}
                        <pre style='white-space: normal'>{{ response }}</pre>
                    {% endfor %}
                </td>
                <td data-label='{{ 'sms77.customerGroups'|trans }}'>
                    {% include '@Sms77SyliusPlugin/Ui/Grid/Field/stringify.html.twig'
                        with {'data': message.customerGroups} %}
                </td>
                <td data-label='{{ 'sms77.from'|trans }}'>
                    {{ message.from }}
                </td>
                <td data-label='{{ 'sms77.ui.config'|trans }}'>
                    {{ message.config.name ? message.config.name : message.config.id }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}