{% extends '@SyliusAdmin/layout.html.twig' %}

{% block title %}
    {{ 'sylius.ui.message'|trans }} #{{ resource.id }} {{ parent() }}
{% endblock %}

{% block content %}
    <div class='ui segment'>
        <table class='ui celled table'>
            <thead class="full-width">
            <tr>
                <th class='ten wide'>{{ 'seven.response'|trans }}</th>
                <th class='two wide'>{{ 'seven.customerGroups'|trans }}</th>
                <th class='two wide'>{{ 'seven.from'|trans }}</th>
                <th class='two wide'>{{ 'seven.ui.config'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td data-label='{{ 'seven.response'|trans }}'>
                    {% for response in resource.response %}
                        <pre style='white-space: normal'>
                            {{ response|json_encode(constant('JSON_PRETTY_PRINT')) }}
                        </pre>
                    {% endfor %}
                </td>
                <td data-label='{{ 'seven.customerGroups'|trans }}'>
                    {% include '@SevenSyliusPlugin/Ui/Grid/Field/stringify.html.twig'
                        with {'data': resource.customerGroups} %}
                </td>
                <td data-label='{{ 'seven.from'|trans }}'>
                    {{ resource.from }}
                </td>
                <td data-label='{{ 'seven.ui.config'|trans }}'>
                    {{ resource.config.name ? resource.config.name : resource.config.id }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
